{
  "name": "agentor",
  "version": "0.1.0",
  "description": "Agentor is an intelligent assistant powered by AI agents that act as your Product Owner, Architect, and Technical Writerâ€”all in one. It guides you through every stage of software development, from idea to maintenance.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "workspaces": [
    "playground/*"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "play": "npm run dev --workspace=playground",
    "size": "size-limit"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "ai",
    "developer-tools",
    "codegen",
    "coding-assistant"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "10 kB"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/agentor#readme",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:fvena/agentor.git"
  },
  "bugs": {
    "url": "https://github.com/fvena/agentor/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com>",
  "engines": {
    "node": ">=22.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.11.31",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "^3.2.2",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "personal-style-guide": "^0.6.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.5",
    "size-limit": "^11.2.0",
    "size-limit-preset-node-lib": "^0.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.4",
    "vitest": "^3.2.2"
  }
}
